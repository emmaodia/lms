<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Image</th>
      <th>Description</th>
      <th>Pages</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= image_tag book.image.url(:medium) %></td>
        <td><%= book.description %></td>
        <td><%= book.pages %></td>
        <td><%= book.rating %></td>
        <!-- I need to make each book print out category name to replace rating -->
        <!-- <td><%= book.category %></td> -->
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

